body{
    margin: 0px;
    padding: 0px;
}

#game-screen{
    display: block;
}
#gameOver, #gameHUD{
    position: absolute;
    visibility: hidden;
}
h1, h2, h3{
    font-family: 'Exo', sans-serif;
    color: red;
    text-align: center;
   
}
.title{
    font-size: 200px;
    margin-top: 0px;
}
#restartButton{
    font-size: 55px;
    border: 3px solid red; 
    border-radius: 10px;
}
#restartButton:hover{
    background-color: dimgray;
}
#startButton{
    font-size: 55px;
    border: 3px solid red;
    border-radius: 10px;
}
#startButton:hover{
    background-color: dimgray;
}
#scoreboard{
    margin: 0px;
    font-size: 40px;
    
}
#gameStart, #gameHUD{
    position: absolute;
    visibility: hidden;
}
